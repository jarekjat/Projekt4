<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button_frame_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="@string/frame_layout"
        android:onClick="makeLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/linear_layout"
        android:onClick="makeLayout"
        app:layout_constraintTop_toBottomOf="@+id/button_frame_layout"
        tools:layout_editor_absoluteX="159dp" />

    <Button
        android:id="@+id/button_table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/table_layout"
        android:onClick="makeLayout"
        app:layout_constraintTop_toBottomOf="@+id/button_linear_layout"
        tools:layout_editor_absoluteX="159dp" />

    <Button
        android:id="@+id/button_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/grid_layout"
        android:onClick="makeLayout"
        app:layout_constraintTop_toBottomOf="@+id/button_table_layout"
        tools:layout_editor_absoluteX="159dp" />

    <Button
        android:id="@+id/button_relative_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/relative_layout"
        android:onClick="makeLayout"
        app:layout_constraintTop_toBottomOf="@+id/button_grid_layout"
        tools:layout_editor_absoluteX="159dp" />

</androidx.constraintlayout.widget.ConstraintLayout>